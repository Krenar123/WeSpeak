@model WebApplication2.Models.Comment

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Create Comment</h1>
<p class="text-center">This is the page where you can create a comment!</p>
<hr />
<div class="row">
    <div class="col-md-6 offset-md-3">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="ArticleId" type="hidden" value="@ViewBag.articleId" />
            <div class="form-group">
                <label asp-for="CommentBody" class="control-label"></label>
                <textarea asp-for="CommentBody" class="form-control" ></textarea>
                <span asp-validation-for="CommentBody" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Articles" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
